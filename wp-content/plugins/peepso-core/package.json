{
  "name": "peepso",
  "private": true,
  "scripts": {
    "build": "browserify -e assets/js/$PKG/index.js | uglifyjs -c -m -o assets/js/$PKG.min.js",
    "watch": "watchify -e assets/js/$PKG/index.js -o assets/js/$PKG.min.js --delay 1500",
    "core": "PKG=core npm run ${MODE:-build}",
    "bundle": "browserify -e assets/js/index.js | uglifyjs -c -m -o assets/js/bundle.min.js",
    "blogposts": "PKG=blogposts npm run ${MODE:-build}",
    "fileupload": "browserify -g browserify-shim -e assets/js/fileupload/index.js | uglifyjs -c -m -o assets/js/fileupload.min.js",
    "hashtags": "PKG=hashtags npm run ${MODE:-build}",
    "location": "PKG=location npm run ${MODE:-build}",
    "markdown": "PKG=markdown npm run ${MODE:-build}",
    "moods": "PKG=moods npm run ${MODE:-build}",
    "profile": "PKG=profile npm run ${MODE:-build}",
    "usertags": "PKG=usertags npm run ${MODE:-build}",
    "css": "node-sass assets/scss/styles.scss --output-style compressed > templates/css/template.css",
    "docs": "rimraf docs && jsdoc ${SRC:-assets/js/core} -t node_modules/docdash -d docs"
  },
  "dependencies": {
    "blueimp-file-upload": "^9.28.0",
    "fg-loadcss": "^2.1.0",
    "imagesloaded": "^4.1.4",
    "load-script": "^1.0.0",
    "marked": "^0.6.2",
    "object-assign": "^4.1.1",
    "promise": "^8.0.3",
    "swipejs": "github:rsusanto/swipe#rtl-support",
    "truncate": "github:pathable/truncate"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "^7.4.3",
    "@wordpress/browserslist-config": "^2.3.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "browserify-shim": "^3.8.14",
    "docdash": "^1.1.0",
    "jsdoc": "^3.5.5",
    "node-sass": "^4.11.0",
    "rimraf": "^2.6.3",
    "uglify-js": "^3.5.4",
    "watchify": "^3.11.1"
  },
  "browserify": {
    "transform": [
      "babelify",
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "jquery": "global:jQuery",
    "./vendor/jquery.ui.widget": "global:jQuery",
    "underscore": "global:_",
    "peepso": "global:peepso",
    "peepsodata": "global:peepsodata"
  }
}
